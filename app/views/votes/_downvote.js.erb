var downvoteButton = $('#downvote-<%= review.id %>');
var upvoteButton = $('#upvote-<%= review.id %>');
var sumSelector = $('#sum-<%= review.id %>');
var sum = parseInt(sumSelector.html());

<% if initial_state == :no_vote %>
  sum -= 1;
  sumSelector[0].innerHTML = sum;
  downvoteButton.addClass('downvoted');
  downvoteButton.css('color', 'orange');
<% elsif initial_state == :downvoted %>
  sum += 1;
  sumSelector[0].innerHTML = sum;
  downvoteButton.removeClass('downvoted');
  downvoteButton.css('color', '');
<% else %>
  sum -= 2;
  sumSelector[0].innerHTML = sum;
  upvoteButton.removeClass('upvoted');
  upvoteButton.css('color', '');
  downvoteButton.addClass('downvoted');
  downvoteButton.css('color', 'orange');
<% end %>
