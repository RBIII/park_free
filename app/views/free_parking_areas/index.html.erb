<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>park free boston</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag "application" %>
    <script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script>
    <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>
  </head>
  <body>
    <div>
      <div class='index-map' id='map'></div>
    </div>

    <script type="text/javascript">
     handler = Gmaps.build('Google');
     var centerpoint = new google.maps.LatLng(42.3601, -71.0589);

     handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
       markers = handler.addMarkers(<%= raw @json_fpas.to_json %>);
       handler.map.centerOn(centerpoint)
       handler.bounds.extendWith(markers);
     });
     </script>

     <table class="free-parking-area-list">
       <thead>
         <tr>
           <th>Title</th>
           <th>Description</th>
           <th>Address</th>
           <th>City</th>
           <th>State</th>
           <th>Zip Code</th>
           <th colspan="3"></th>
         </tr>
       </thead>

       <tbody>
         <% @free_parking_areas.each do |free_parking_area| %>
           <tr>
             <td><%= free_parking_area.title %></td>
             <td><%= free_parking_area.description %></td>
             <td><%= free_parking_area.address %></td>
             <td><%= free_parking_area.city %></td>
             <td><%= free_parking_area.state %></td>
             <td><%= free_parking_area.zip_code %></td>
             <td><%= link_to 'Show', free_parking_area %></td>
             <td><%= link_to 'Edit', edit_free_parking_area_path(free_parking_area) if free_parking_area.user == current_user %></td>
             <td><%= link_to 'Destroy', free_parking_area, method: :delete, data: { confirm: 'Are you sure?' } if free_parking_area.user == current_user %></td>
           </tr>
         <% end %>
       </tbody>
     </table>
  </body>
</html>
